#operation
  .operation-list
    display flex
    flex-wrap wrap
    > li
      flex-basis 50%
      width 160px
      height 160px
      padding 8px 8px
      > div
        width 100%
        height 100%
        background-position center
        background-size: cover;
        background-repeat no-repeat
    > li:nth-child(1)
      padding-left 16px
      > div
        background-image url('./img/1-紫萌青少年创新发展基金@2x.png')
    > li:nth-child(2)
      padding-right 16px
      > div
        background-image url('./img/2-智通知识产权运营基金@2x.png')