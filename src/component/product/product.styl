#product
  .background
    width 375px
    height 210px
    background url('./img/app-banner@2x.png')
    margin-bottom 8px
  .product-list
    display flex
    flex-wrap wrap
    > li
        flex-basis 50%
        width 160px
        height 160px
        padding 8px 8px
        > div
          width 100%
          height 100%
          background-position center
          background-size: contain;
    > li:nth-child(1)
        padding-left 16px
        > div
          background-image url('./img/智金百科@2x.png')
    > li:nth-child(2)
        padding-right 16px
        > div
          background-image url('./img/智金无忧@2x.png')
    > li:nth-child(3)
        padding-left 16px
        > div
          background-image url('./img/智金拍卖@2x.png')
    > li:nth-child(4)
        padding-right 16px
        > div
          background-image url('./img/智金运营@2x.png')
    > li:nth-child(5)
        padding-left 16px
        > div
          background-image url('./img/智金联盟@2x.png')
    > li:nth-child(6)
        padding-right 16px
        > div
          background-image url('./img/智金策划@2x.png')
